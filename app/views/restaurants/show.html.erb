<div class="card" style="width: 18rem; padding: 16px; margin: 16px;">
  <div class="card-body">
    <h3 class="card-title"> <%= @restaurant.name %></h3>
    <p class="card-text"><%= @restaurant.address %></p>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <p class="card-text"><%= @restaurant.category %></p>
  </div>
</div>


<br>
<div class="card" style="width: 18rem; margin: 16px;">
  <div class="card-header" style="background-color: #72d58c; font: Bold;">
    Reviews
  </div>
  <ul class="list-group list-group-flush">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
</div>


<%= link_to 'Add a review', new_restaurant_review_path(@restaurant)  %>

<%= link_to restaurants_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>



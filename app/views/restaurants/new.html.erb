<h1>Creat your restaurant</h1>
<br>

<%= simple_form_for [@restaurant] do |f| %>
  <%= f.label 'name' %>
  <%= f.text_field :name %>

  <%= f.label 'address' %>
  <%= f.text_field :address %>

  <%= f.label 'phone number' %>
  <%= f.text_field :phone_number %>

  <%= f.label 'category' %>
  <%= f.text_field :category %>
  <%= f.submit "add a restaurant" %>
<% end %>
